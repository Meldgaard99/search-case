# Build the Blazor application
FROM mcr.microsoft.com/dotnet/sdk:7.0 AS build
WORKDIR /src

# Copy project files
COPY ["BlazorApp1/BlazorApp1.csproj", "BlazorApp1/"]
COPY ["Shared/Shared.csproj", "Shared/"]

# Restore dependencies
RUN dotnet restore "BlazorApp1/BlazorApp1.csproj"

# Copy all source code
COPY . .

# Publish the Blazor app
RUN dotnet publish "BlazorApp1/BlazorApp1.csproj" -c Release -o /app/publish

# Use a base image for Nginx to serve the Blazor app
FROM nginx:alpine AS final

# Copy nginx config
COPY nginx.conf /etc/nginx/nginx.conf

# Copy published Blazor app to Nginx html directory
COPY --from=build /app/publish/wwwroot /usr/share/nginx/html

# Expose port 80
EXPOSE 80

# Start Nginx
CMD ["nginx", "-g", "daemon off;"]
